  "devDependencies": {
    "@jest/globals": "^29.4.2",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "jest": "^29.4.2",
    "jest-junit": "^15.0.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
